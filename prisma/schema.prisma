// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  password      String?    // For email/password auth (hashed)
  googleId      String?    @unique
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  accounts         Account[]
  sessions         Session[]
  subscriptions    Subscription[]
  usageLogs        UsageLog[]
  generatedResumes GeneratedResume[]
  builderResumes   BuilderResume[]
  interviewPreps   InterviewPrep[]
  linkedInOptimizations LinkedInOptimization[]
  jobApplications JobApplication[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id                String    @id @default(cuid())
  userId            String
  paddleId          String?   @unique
  customerId        String?   // Dodo customer ID - NEW FIELD
  gumroadId         String?   @unique  // Keep for backward compatibility
  plan              String    // 'monthly', 'yearly', 'pay-per-use'
  status            String    @default("active") // 'active', 'cancelled', 'paused', 'past_due', 'failed'
  monthlyUsageCount Int       @default(0)
  monthlyLimit      Int       @default(100)
  lastResetDate     DateTime  @default(now())
  currentPeriodEnd  DateTime?
  cancelledAt       DateTime?

  // New fields for scheduled plan changes
  scheduledPlanChange  String?   // 'monthly' or 'yearly'
  scheduledChangeDate  DateTime?

  // Cancel at period end for auto-renewal control
  cancelAtPeriodEnd Boolean @default(false)

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([paddleId])
  @@index([customerId])
}

model UsageLog {
  id              String   @id @default(cuid())
  userId          String
  generationCount Int      @default(1)
  generatedAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, generatedAt])
}

// NEW: Store generated resumes for history
model GeneratedResume {
  id            String   @id @default(cuid())
  userId        String
  
  // Job info (optional, extracted if possible)
  jobTitle      String?
  company       String?
  jobUrl        String?
  
  // Generated content
  fullResume    String   @db.Text
  atsResume     String   @db.Text
  coverLetter   String   @db.Text
  matchScore    Int
  
  // Original inputs (truncated for storage)
  originalResumeSnippet    String?  @db.Text  // First 500 chars
  jobDescriptionSnippet    String?  @db.Text  // First 500 chars
  
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

// Job Application Tracker - moved from localStorage to database for cross-device sync
model JobApplication {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Job details
  companyName   String
  positionTitle String
  jobUrl        String?
  location      String?
  salary        String?
  isRemote      Boolean  @default(false)
  jobSource     String   @default("other") // linkedin, indeed, company_website, referral, recruiter, other

  // Application status
  status        String   @default("saved") // saved, applied, interview, offer, rejected
  appliedDate   DateTime?
  notes         String?  @db.Text

  // Follow-up and priority
  followUpDate  DateTime?
  priority      String   @default("medium") // low, medium, high

  // Contact information
  contactPerson String?
  contactEmail  String?

  // Metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Status change history
  statusHistory JobApplicationStatusHistory[]

  @@index([userId])
  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([userId, priority])
}



// Status change history for job applications
model JobApplicationStatusHistory {
  id            String   @id @default(cuid())
  applicationId String
  application   JobApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  status        String   // saved, applied, interview, offer, rejected
  changedAt     DateTime @default(now())
  note          String?  @db.Text

  @@index([applicationId, changedAt])
}

// Resume Builder - saves user progress and generated resumes
model BuilderResume {
  id            String   @id @default(cuid())
  userId        String
  
  // Step 1: Target Job
  targetJobTitle    String?
  targetIndustry    String?
  experienceLevel   String?
  
  // Step 2: Personal Info
  fullName      String?
  email         String?
  phone         String?
  location      String?
  linkedin      String?
  portfolio     String?
  
  // Step 3: Education (JSON array)
  education     String?  @db.Text
  
  // Step 4: Work Experience (JSON array)
  experience    String?  @db.Text
  
  // Step 5: Skills (JSON array)
  skills        String?  @db.Text
  
  // Step 6: Summary (AI generated or custom)
  summary       String?  @db.Text
  
  // Generated Output
  generatedResume   String?  @db.Text
  generatedAt       DateTime?
  
  // Wizard state
  currentStep   Int      @default(1)
  isComplete    Boolean  @default(false)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Interview Preparation Module
model InterviewPrep {
  id              String            @id @default(cuid())
  userId          String
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Input data
  resumeContent   String            @db.Text
  jobDescription  String            @db.Text
  jobTitle        String
  company         String?
  interviewType   InterviewType     @default(BEHAVIORAL)

  // Generated content
  questions       Json              // Array of {question, suggestedAnswer, category, difficulty, tips}
  keyTalkingPoints Json             // Array of {point, evidence, relevance}
  questionsToAsk  Json              // Array of {question, purpose, category}
  companyInsights String?           @db.Text

  // Metadata
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Relations
  mockSessions    MockInterviewSession[]

  @@index([userId])
}

model MockInterviewSession {
  id              String        @id @default(cuid())
  prepId          String
  prep            InterviewPrep @relation(fields: [prepId], references: [id], onDelete: Cascade)

  // Session data
  answers         Json          // Array of {questionIndex, question, userAnswer, feedback}
  currentQuestion Int           @default(0)
  totalQuestions  Int
  overallScore    Int?
  overallFeedback String?       @db.Text

  // Status
  status          SessionStatus @default(IN_PROGRESS)
  startedAt       DateTime      @default(now())
  completedAt     DateTime?

  @@index([prepId])
}

enum InterviewType {
  PHONE_SCREENING
  TECHNICAL
  BEHAVIORAL
  HR_CULTURE
  FINAL_ROUND
}

enum SessionStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

// ===========================================
// JOB CATEGORIES & RESUME EXAMPLES
// ===========================================

// Main job categories (IT, Healthcare, Education, etc.)
model JobCategory {
  id          String   @id @default(cuid())
  name        String   // "Information Technology"
  slug        String   @unique // "information-technology"
  description String?  @db.Text
  icon        String?  // Lucide icon name: "Monitor", "Heart", "GraduationCap"
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)

  // SEO
  metaTitle       String?
  metaDescription String? @db.Text

  // Relations
  jobExamples ResumeExample[]

  // Stats
  viewCount   Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Individual job resume examples (Software Engineer, Nurse, Teacher, etc.)
model ResumeExample {
  id              String      @id @default(cuid())

  // Basic Info
  jobTitle        String      // "Software Engineer"
  slug            String      @unique // "software-engineer"
  categoryId      String
  category        JobCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  // Experience Levels (we'll create examples for each)
  experienceLevel String      // "entry" | "mid" | "senior"

  // Sample Content - What users see as examples
  sampleSummary       String   @db.Text  // Professional summary example
  sampleBulletPoints  Json     // Array of achievement bullet points
  sampleSkills        Json     // { technical: [], soft: [], tools: [] }

  // AI Suggestions - Used to pre-fill builder
  suggestedSkills     Json     // Skills to suggest when user selects this job
  suggestedKeywords   Json     // ATS keywords for this role
  summaryTemplate     String?  @db.Text  // Template for AI to enhance

  // Job Market Info
  salaryRangeMin      Int?     // e.g., 80000
  salaryRangeMax      Int?     // e.g., 150000
  salaryCurrency      String   @default("USD")
  jobOutlook          String?  // "Growing 22% by 2030"
  demandLevel         String?  // "high" | "medium" | "low"

  // Writing Guide Content
  writingTips         Json?    // Array of tips specific to this job
  commonMistakes      Json?    // What to avoid

  // SEO
  metaTitle           String?
  metaDescription     String?  @db.Text

  // Stats & Status
  viewCount           Int      @default(0)
  useCount            Int      @default(0) // How many times used in builder
  isActive            Boolean  @default(true)
  isFeatured          Boolean  @default(false)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([categoryId])
  @@index([slug])
  @@index([experienceLevel])
  @@index([isActive, isFeatured])
}

// Skills database for autocomplete and suggestions
model SkillSuggestion {
  id          String   @id @default(cuid())
  name        String   @unique // "JavaScript"
  category    String   // "technical" | "soft" | "tool" | "certification"

  // Which jobs commonly use this skill
  relatedJobs String[] // ["software-engineer", "web-developer", "full-stack-developer"]

  // Popularity for sorting
  popularity  Int      @default(0)

  // Variations for matching
  aliases     String[] // ["JS", "Javascript", "ECMAScript"]

  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([popularity])
}

// Track which examples users interact with (for analytics)
model ExampleInteraction {
  id          String   @id @default(cuid())
  exampleId   String
  userId      String?  // null for anonymous users
  action      String   // "view" | "use_in_builder" | "_skill" | "_bullet"

  createdAt   DateTime @default(now())

  @@index([exampleId, action])
  @@index([userId])
  @@index([createdAt])
}

// LinkedIn Profile Optimization
model LinkedInOptimization {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Input data
  resumeContent       String   @db.Text
  linkedinUrl         String?
  currentHeadline     String?
  currentAbout        String?  @db.Text
  targetRole          String?

  // Analysis results
  consistencyScore    Int      @default(0)
  keywordsMatch       Int      @default(0)
  experienceAlign     Int      @default(0)
  skillsCoverage      Int      @default(0)

  // Generated content
  suggestedHeadlines  Json     // Array of 3 headline options
  optimizedAbout      String?  @db.Text
  missingKeywords     Json     // Array of keywords to add
  skillsToAdd         Json     // Array of skills
  experienceTips      Json     // Array of improvement suggestions

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
}
